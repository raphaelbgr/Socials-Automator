  "content_strategy": {
    "mission": "Deliver entertainment news that matters, fast. No fluff, no clickbait - just what you need to stay in the loop.",
    "tone": {
      "primary": "casual_informed",
      "attributes": ["conversational", "quick", "slightly_witty", "informative", "relatable"],
      "avoid": ["formal", "gossipy", "judgmental", "clickbait", "sensationalized"]
    },
    "voice_guidelines": {
      "sentence_style": "Short, punchy, conversational. Like texting a friend the news.",
      "vocabulary": "Casual but informed. Pop culture references welcome.",
      "perspective": "Your friend who always knows what's happening.",
      "examples": [
        "Good: 'Taylor just dropped a surprise album and the internet is losing it'",
        "Bad: 'Pop star Taylor Swift has released an unexpected new studio album'",
        "Good: 'Netflix is raising prices again - here's what it means for your wallet'",
        "Bad: 'Streaming giant Netflix announces subscription fee increase'"
      ]
    },
    "content_pillars": [
      {
        "id": "daily_briefing",
        "name": "Daily Briefing",
        "description": "The top 3-5 entertainment stories of the day, quickly summarized",
        "frequency_percent": 50,
        "examples": ["3 things you missed today", "Today's entertainment buzz", "What's trending right now"]
      },
      {
        "id": "what_to_watch",
        "name": "What to Watch",
        "description": "New releases, recommendations, and what's leaving streaming soon",
        "frequency_percent": 20,
        "examples": ["New on Netflix this week", "Movies to watch this weekend", "Shows everyone's binging"]
      },
      {
        "id": "music_drops",
        "name": "Music Drops",
        "description": "New album releases, tour announcements, music industry news",
        "frequency_percent": 15,
        "examples": ["Albums dropping this Friday", "Tour dates announced", "Music news roundup"]
      },
      {
        "id": "viral_moments",
        "name": "Viral Moments",
        "description": "The memes, moments, and drama everyone's talking about",
        "frequency_percent": 15,
        "examples": ["Why everyone's talking about...", "The moment that broke the internet", "Drama explained"]
      }
    ],
    "posting_schedule": {
      "posts_per_day": 4,
      "posting_times_utc": ["12:00", "17:00", "22:00", "02:00"],
      "editions": {
        "morning": {
          "time_utc": "12:00",
          "theme": "Morning Briefing",
          "focus": "Overnight news, what to expect today"
        },
        "midday": {
          "time_utc": "17:00",
          "theme": "Midday Pulse",
          "focus": "Breaking stories, trending topics"
        },
        "evening": {
          "time_utc": "22:00",
          "theme": "Evening Wrap",
          "focus": "Day's biggest stories summarized"
        },
        "night": {
          "time_utc": "02:00",
          "theme": "Night Edition",
          "focus": "Entertainment, lighter stories, tomorrow preview"
        }
      }
    },
    "content_rules": {
      "always": [
        "Include 'why it matters' angle for each story",
        "Keep total video under 60 seconds",
        "Cite sources (TMZ reports, Variety confirms, etc.)",
        "Focus on actionable info (when to watch, where to listen)",
        "End with CTA to follow for daily updates"
      ],
      "never": [
        "Spread unverified rumors as fact",
        "Use clickbait hooks that don't deliver",
        "Take sides in celebrity drama",
        "Include news older than 24 hours (unless major)",
        "Get political unless directly entertainment-related"
      ],
      "avoid_topics": [
        "Political commentary",
        "Unverified gossip",
        "Tragedy exploitation",
        "Personal attacks on celebrities",
        "Controversial takes without facts"
      ]
    }
  },

  "hook_strategies": {
    "primary_types": [
      {
        "type": "number_briefing",
        "description": "Numbered list of stories to expect",
        "templates": [
          "{Number} things in entertainment you need to know today",
          "{Number} stories everyone's talking about right now",
          "Your {time_of_day} entertainment briefing in 60 seconds"
        ],
        "frequency_percent": 40
      },
      {
        "type": "breaking_news",
        "description": "Lead with the biggest story",
        "templates": [
          "{Celebrity} just {action} and the internet is losing it",
          "Breaking: {headline}. Here's what we know.",
          "{Platform} just announced {news}. Here's what it means for you."
        ],
        "frequency_percent": 30
      },
      {
        "type": "curiosity",
        "description": "Tease what's coming",
        "templates": [
          "The {category} news you missed while sleeping",
          "Why everyone's talking about {topic} today",
          "The story that's about to blow up"
        ],
        "frequency_percent": 30
      }
    ],
    "hook_rules": {
      "max_words": 15,
      "must_include": ["timeliness", "specificity"],
      "formatting": ["conversational", "urgent_but_not_clickbait"]
    }
  },

